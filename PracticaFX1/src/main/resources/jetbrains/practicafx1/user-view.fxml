<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.UserController"
            prefHeight="400.0" prefWidth="600.0">

    <TextField fx:id="usernameField" layoutX="50" layoutY="50" promptText="Username"/>

    <TextField fx:id="passwordField" layoutX="50" layoutY="100" promptText="Password" />

    <Button layoutX="50" layoutY="150" text="Add User" onAction="#addUser"/>

</AnchorPane>
